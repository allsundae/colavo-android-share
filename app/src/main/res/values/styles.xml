<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <!--        <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>-->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/buttonSecondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorSecondaryInverse">@color/md_edittext_error</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <!--for shared element transition-->
        <item name="android:windowContentTransitions">true</item>
        <!-- for ripple color -->
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:elevation">0dp</item>
        <item name="colorPrimary">@color/backgroundWhite</item>
        <item name="colorPrimaryDark">@color/buttonSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:elevation">0dp</item>
        <item name="colorPrimary">@color/backgroundWhite</item>
        <item name="colorPrimaryDark">@color/buttonSecondary</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--ToolBar-->
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/toolBarIcon</item>
        <item name="android:textColorSecondary">@color/toolBarIcon</item>
        <item name="android:tint">@color/toolBarIcon</item>
        <item name="actionMenuTextColor">@color/toolBarIcon</item>
    </style>


    <!-- for BottomBar -->
    <style name="BottomBarText">
        <item name="android:textSize">11sp</item>

    </style>
    <style name="BB_BottomBarItem" >
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Splash -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Splash -->
    <style name="BottomSheetTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/backgroundWhite</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="flatButton"></style>
</resources>