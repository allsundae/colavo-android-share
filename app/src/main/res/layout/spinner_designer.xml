<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:clickable="false"
    android:focusable="false"
    android:layout_marginBottom="@dimen/list_vertical_padding"
    android:layout_marginTop="@dimen/list_vertical_padding"
    tools:padding="@dimen/activity_margin">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/designer_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_customer_holder_person_smaller"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        app:civ_fill_color="@color/customerPlaceholderColor" />

    <TextView
        android:id="@+id/designer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Designer name"
        android:textSize="@dimen/list_1sttext"
        android:textStyle="bold" />
    <!--android:textAppearance="@style/ToolbarTitleText"-->
</LinearLayout>