<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundWhite"
    tools:ignore="missingPrefix"
    android:gravity="top|center">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:font="custom1" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stats_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:paddingBottom="@dimen/height_bottombar"
        android:focusable="true"
        android:clickable="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/chart_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart_bar"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/barText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chart_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:lineSpacingExtra="-10sp"
                android:text="STATS. will be here"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="24sp"
                android:textStyle="bold"
                app:font="custom1" />
            <TextView
                android:id="@+id/barText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/barText1"
                android:layout_centerHorizontal="true"
                android:text="Under Construction"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />
        </RelativeLayout>

