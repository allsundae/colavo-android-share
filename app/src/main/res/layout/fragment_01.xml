<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundWhite"
    android:paddingTop="@dimen/toolbar_height">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@color/primaryTextColor"
        app:eventPadding="8dp"
        app:eventCornerRadius="8dp"
        app:eventTextSize="12dp"
        app:eventMarginVertical="4dp"
        app:hourSeparatorColor="#DDE0E2"
        app:overlappingEventGap="4dp"
        app:showNowLine="true"
        app:nowLineColor="#FE7C92"
        app:textSize="12sp"
        app:hourHeight="100dp"
        app:headerColumnPadding="16dp"
        app:headerColumnTextColor="#8f000000"
        app:headerRowPadding="25dp"
        app:columnGap="0dp"
        app:noOfVisibleDays="1"
        app:headerRowBackgroundColor="@color/backgroundWhite"
        app:dayBackgroundColor="@color/backgroundWhite"
        app:todayBackgroundColor="@color/backgroundWhite"
        app:headerColumnBackground="#ffffffff"/>


</RelativeLayout>