<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colavo.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.colavo.android.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.colavo.android.ui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.colavo.android.ui.login.LoginActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.colavo.android.ui.salons.SalonListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.colavo.android.ui.event.eventActivity"
            android:parentActivityName="com.colavo.android.ui.salons.SalonListActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>